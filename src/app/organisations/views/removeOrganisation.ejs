<div class="grid-row">
    <div class="col-8">
        <h1 class="heading-xlarge">
            Remove organisation
        </h1>
        <p class="lede">Please review these details before removing the organisation.</p>

        <dl class="app-check-your-answers app-check-your-answers--short">

            <div class="app-check-your-answers__contents">
                <dt class="app-check-your-answers__title">
                    Organisation
                </dt>
                <dd class="app-check-your-answers__answer">
                    <%=locals.organisation.name%>
                </dd>
            </div>

            <div class="app-check-your-answers__contents">
                <dt class="app-check-your-answers__title">
                    URN
                </dt>
                <dd class="app-check-your-answers__answer">
                    <%=locals.organisation.urn%>
                </dd>
            </div>

            <% if (locals.organisation.category) { %>
            <div class="app-check-your-answers__contents">
                <dt class="app-check-your-answers__title">
                    Category
                </dt>
                <dd class="app-check-your-answers__answer">
                    <%= locals.organisation.category.name%>
                </dd>
            </div>
            <% } %>

        </dl>

        <form method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
            <div class="form-submit submit-buttons">
                <button type="submit" class="button">Continue</button>
                <a href="/organisations" class="button button-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
